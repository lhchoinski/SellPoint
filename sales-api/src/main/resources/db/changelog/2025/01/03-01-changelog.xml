<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.17.xsd">

    <changeSet id="create-sale-products-table" author="luiz.choinski">

        <createTable tableName="sale_products">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="sale_id" type="UUID">
                <constraints nullable="false" foreignKeyName="fk_sale_products_sale"
                             referencedTableName="sales" referencedColumnNames="id"/>
            </column>

            <column name="product_id" type="UUID">
                <constraints nullable="false"/>
            </column>

            <column name="quantity" type="INT">
                <constraints nullable="false"/>
            </column>

            <column name="price" type="DECIMAL(19,2)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex indexName="idx_sale_products_sale_id" tableName="sale_products">
            <column name="sale_id"/>
        </createIndex>
    </changeSet>

    <changeSet id="1755873189278-1" author="Luiz Henrique">
        <addColumn tableName="sale_products">
            <column name="name" type="VARCHAR(100)"/>
        </addColumn>
    </changeSet>

</databaseChangeLog>
